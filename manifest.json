{
    "manifest_version": 3,
    "name": "Tab Manager",
    "version": "1.0",
    "description": "A Chrome extension to manage tabs, including auto-closing, lazy loading, auto-sleeping, and grouping.",
    "background": {
        "service_worker": "dist/background.bundle.js"
    },
    "permissions": [
        "tabs",
        "storage",
        "tabGroups"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
    }
}